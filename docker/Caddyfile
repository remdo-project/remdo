{
  admin off
}

:{$APP_PORT} {
  @options method OPTIONS
  handle @options {
    respond 204
  }

  @doc {
    path /doc* /doc/*
    method GET POST PUT PATCH DELETE OPTIONS
  }
  handle @doc {
    reverse_proxy 127.0.0.1:{env.YSWEET_PORT_INTERNAL}
  }

  handle_path /health {
    respond 200
  }

  root * /srv/remdo
  try_files {path} {path}/ /index.html
  file_server
}
