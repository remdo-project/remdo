{
  "packageManager": "pnpm@10.18.2+sha512.9fb969fa749b3ade6035e0f109f0b8a60b5d08a1a87fdf72e337da90dcc93336e2280ca4e44f2358a649b83c17959e9993e777c2080879f3801e6f0d999ad3dd",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:ws\" \"pnpm run test:preview\"",
    "dev:web": "vite",
    "dev:ws": "node ./scripts/ws-server.mjs",
    "dev:init": "./scripts/dev-init.sh",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "pnpm run typecheck && pnpm run lint:code",
    "lint:code": "eslint --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
    "lint:code:watch": "chokidar \"**/*.{ts,tsx,js,jsx,mts,cts,json}\" --initial -i \"**/{node_modules,data,.git}/**\" -d 150 -c \"pnpm lint:code && echo LINT_OK || { echo LINT_FAIL; exit 1; }\"",
    "lint:fix": "eslint --max-warnings=0 --fix --cache --cache-location node_modules/.cache/eslint",
    "typecheck": "tsc",
    "typecheck:watch": "pnpm run typecheck --watch",
    "lint:staged": "lint-staged",
    "format": "pnpm run lint:fix",
    "check": "pnpm run lint && pnpm run test",
    "deps:list": "pnpm list --depth=-1 --silent",
    "test": "pnpm run test:unit",
    "test:unit": "COLLAB_ENABLED=false pnpm exec vitest run",
    "test:unit:collab": "pnpm exec vitest run smoke",
    "test:unit:coverage": "COLLAB_ENABLED=false pnpm exec vitest run --coverage",
    "test:unit:watch": "COLLAB_ENABLED=false node ./scripts/test-unit-watch.mjs",
    "test:preview": "node ./scripts/test-preview.mjs"
  },
  "dependencies": {
    "@lexical/devtools-core": "^0.37.0",
    "@lexical/history": "^0.37.0",
    "@lexical/list": "^0.37.0",
    "@lexical/react": "^0.37.0",
    "@lexical/rich-text": "^0.37.0",
    "@lexical/utils": "^0.37.0",
    "@lexical/yjs": "^0.37.0",
    "@mantine/core": "^8.3.5",
    "@mantine/hooks": "^8.3.5",
    "dotenv-flow": "^4.1.0",
    "lexical": "^0.37.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "y-websocket": "3.0.0",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@eslint-react/eslint-plugin": "^1.53.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@y/websocket-server": "^0.1.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^3.2.4",
    "vitest-preview": "^0.0.3",
    "ws": "6.2.1"
  }
}
