{
  "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "pnpm run lint:peers && pnpm run lint:types && pnpm run lint:code",
    "lint:code": "eslint . --max-warnings=0",
    "lint:code:watch": "chokidar \"**/*\" --initial -i \"**/{node_modules,data,.git}/**\" -d 150 -c \"echo ::ESLINT START::; pnpm exec eslint -f stylish --cache --cache-location data/.eslintcache . --max-warnings=0 || true; echo ::ESLINT END::\"",
    "lint:fix": "pnpm exec eslint . --fix",
    "lint:types": "tsc",
    "lint:types:watch": "pnpm run lint:types --watch",
    "lint:peers": "pnpm list --depth=-1 --silent",
    "test:unit": "npx vitest run",
    "test:unit:watch": "npx vitest --watch --ui --api.host 0.0.0.0"
  },
  "dependencies": {
    "@lexical/history": "^0.36.2",
    "@lexical/react": "^0.36.2",
    "@lexical/rich-text": "^0.36.2",
