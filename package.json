{
  "type": "module",
  "packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402",
  "engines": {
    "node": ">=22.12.0"
  },
  "browserslist": {
    "production": [
      "last 2 Chrome versions",
      "last 2 ChromeAndroid versions",
      "last 2 Edge versions",
      "last 2 Firefox versions",
      "last 2 Safari versions"
    ],
    "development": [
      "last 1 Chrome version",
      "last 1 Firefox version",
      "last 1 Safari version"
    ]
  },
  "remdoSupport": {
    "tools": {
      "pnpm": ">=10.18.0",
      "git": ">=2.40.0"
    },
    "notes": [
      "Browsers outside the Browserslist ranges are unsupported.",
      "Node runtimes must satisfy engines.node."
    ]
  },
  "scripts": {
    "dev": "concurrently \"pnpm run dev:web\" \"pnpm run dev:collab\" \"pnpm run test:preview\"",
    "dev:web": "vite",
    "dev:collab": "tsx ./tools/collab-server.ts",
    "dev:init": "./tools/dev-init.sh",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "cross-env CI=1 pnpm run typecheck && pnpm run lint:code && pnpm run lint:md",
    "lint:code": "timeout ${TEST_TIMEOUT:-60}s cross-env CI=1 eslint --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
    "lint:code:watch": "chokidar \"**/*.{ts,tsx,js,jsx,mts,cts,mjs,cjs,json,md,markdown}\" --initial -i \"**/{node_modules,data,.git}/**\" -d 150 -c \"pnpm lint && echo LINT_OK || { echo LINT_FAIL; exit 1; }\"",
    "lint:fix": "eslint --max-warnings=0 --fix --cache --cache-location node_modules/.cache/eslint",
    "lint:md": "timeout ${TEST_TIMEOUT:-60}s markdownlint-cli2 \"AGENTS.md\" \"docs/**/*.md\"",
    "lint:md:file": "timeout ${TEST_TIMEOUT:-60}s pnpm exec markdownlint-cli2 --no-globs",
    "typecheck": "timeout ${TEST_TIMEOUT:-60}s tsc",
    "typecheck:tests": "timeout ${TEST_TIMEOUT:-60}s pnpm exec tsc -p tsconfig.tests.json --pretty false",
    "typecheck:watch": "tsc --watch",
    "format": "pnpm run lint:fix",
    "deps:list": "pnpm list --depth=-1 --silent",
    "test": "pnpm run test:unit",
    "test:all": "pnpm install --frozen-lockfile --lockfile-only && pnpm run lint && pnpm run test:unit && pnpm run test:unit:collab && pnpm run test:e2e",
    "test:unit": "timeout ${TEST_TIMEOUT:-60}s cross-env COLLAB_ENABLED=false pnpm exec vitest run",
    "test:unit:collab": "timeout ${TEST_TIMEOUT:-60}s pnpm exec vitest run",
    "test:dev": "cross-env REMDO_VALIDATE_MAIN_DOC=1 pnpm exec vitest run tests/unit/collab/main-doc-schema.collab.spec.ts",
    "test:unit:coverage": "timeout ${TEST_TIMEOUT:-60}s cross-env COLLAB_ENABLED=false pnpm exec vitest run --coverage",
    "test:unit:watch": "COLLAB_ENABLED=false tsx ./tools/test-unit-watch.ts",
    "test:preview": "tsx ./tools/test-preview.ts",
    "test:e2e": "timeout ${TEST_TIMEOUT:-60}s pnpm exec playwright test",
    "test:e2e:ui": "tsx ./tools/test-e2e-ui.ts",
    "test:e2e:watch": "PWTEST_WATCH=1 pnpm exec playwright test",
    "load": "tsx ./tools/snapshot.ts load",
    "save": "tsx ./tools/snapshot.ts save",
    "backup": "tsx ./tools/snapshot.ts backup"
  },
  "dependencies": {
    "@lexical/devtools-core": "catalog:",
    "@lexical/history": "catalog:",
    "@lexical/list": "catalog:",
    "@lexical/markdown": "catalog:",
    "@lexical/react": "catalog:",
    "@lexical/rich-text": "catalog:",
    "@lexical/utils": "catalog:",
    "@lexical/yjs": "catalog:",
    "@mantine/core": "catalog:",
    "@mantine/hooks": "catalog:",
    "@tabler/icons-react": "catalog:",
    "@y-sweet/client": "catalog:",
    "@y-sweet/react": "catalog:",
    "@y-sweet/sdk": "catalog:",
    "lexical": "catalog:",
    "lib0": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "y-protocols": "catalog:",
    "yjs": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@eslint-react/eslint-plugin": "catalog:",
    "@lexical/eslint-plugin": "catalog:",
    "@playwright/test": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@types/estree": "catalog:",
    "@types/jsdom": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@types/ws": "catalog:",
    "@vitejs/plugin-react-swc": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "chokidar-cli": "catalog:",
    "concurrently": "catalog:",
    "cross-env": "catalog:",
    "dotenv-flow": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-compat": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-react-refresh": "catalog:",
    "eslint-plugin-unicorn": "catalog:",
    "jiti": "catalog:",
    "jsdom": "catalog:",
    "markdownlint-cli2": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vitest-preview": "catalog:",
    "ws": "catalog:",
    "y-sweet": "catalog:"
  }
}
