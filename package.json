{
  "name": "notes",
  "version": "0.1.0",
  "private": true,
  "imports": {
    "#env": "./config/env.server.ts"
  },
  "dependencies": {
    "@hocuspocus/extension-logger": "^3.2.3",
    "@hocuspocus/provider": "^3.2.3",
    "@hocuspocus/server": "^3.2.4",
    "@lexical/link": "^0.36.1",
    "@lexical/list": "^0.36.1",
    "@lexical/react": "^0.36.1",
    "@lexical/utils": "^0.36.1",
    "@lexical/yjs": "^0.36.1",
    "bootstrap": "^5.3.7",
    "bootstrap-icons": "^1.9.1",
    "dotenv": "^17.2.1",
    "envalid": "^8.0.0",
    "fs-extra": "^11.3.2",
    "lexical": "^0.36.1",
    "react": "^19.0.0",
    "react-bootstrap": "^2.10.4",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^6.0.0",
    "react-router-dom": "^7.9.3",
    "uuid": "^13.0.0",
    "y-indexeddb": "^9.0.9",
    "y-websocket": "^3.0.0",
    "yjs": "13.6.27"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck:app": "tsc --noEmit -p tsconfig.json",
    "typecheck:tests": "tsc --noEmit -p tsconfig.tests.json",
    "typecheck": "npm run -s typecheck:app && npm run -s typecheck:tests",
    "open": "./utils.sh open_document",
    "server": "VITE_DOCUMENTS=$(cd tests/data && ls *.json | sed 's/\\.json//' | tr '\n' ',') vite --host",
    "websocket-persist": "HOST=0.0.0.0 PORT=8080 YPERSISTENCE=./data/yjsDB npx y-websocket",
    "websocket": "HOST=0.0.0.0 PORT=8080 npx y-websocket",
    "hocuspocus": "node ./hocuspocus.mjs",
    "build": "vite build",
    "test-browser": "npm run build && VITE_ENABLE_FAST_REFRESH=false npx playwright test --project=chromium",
    "test-browser-collab": "npm run build && FORCE_WEBSOCKET=true VITE_ENABLE_FAST_REFRESH=false npx playwright test --project=chromium",
    "test-unit": "npx vitest run",
    "test-performance": "FORCE_WEBSOCKET=true VITE_PERFORMANCE_TESTS=true VITE_LOG_LEVEL=info time -f 'Time: %es' npx vitest run performance/performance --reporter ./tests/unit/performance/reporter.ts -t",
    "test-unit-collab": "FORCE_WEBSOCKET=true npx vitest run tests/unit/collab --maxWorkers=1",
    "test-unit-watch": "npx vitest --watch --ui --api.host 0.0.0.0",
    "test-unit-minimal": "npx vitest --reporter=./tests/unit/common/reporter.ts --watch --ui",
    "test-serialization": "npx vitest run tests/unit/serialization.spec.ts -t verify",
    "test": "npm run test-unit && npm run test-browser",
    "preview": "vite preview --host",
    "serve:prod": "npm run build && npm run preview",
    "kill-npm-processes": "ps -eaf | grep 'npm run' | awk '{print $2}' |  xargs kill",
    "load": "./utils.sh run_serialization load",
    "save": "./utils.sh run_serialization save",
    "submodules": "git submodule update --init --recursive"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@eslint-react/eslint-plugin": "^1.53.1",
    "@microlink/react-json-view": "^1.27.0",
    "@playwright/test": "^1.55.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@testing-library/react": "^16.1.0",
    "@types/bootstrap": "^5.2.6",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/ui": "^3.2.4",
    "@y/websocket-server": "^0.1.1",
    "chokidar": "^4.0.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.21",
    "globals": "^16.4.0",
    "husky": "^9.0.11",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "1.93.2",
    "typescript": "^5.9.0",
    "vite": "^7.1.7",
    "vitest": "^3.0.0"
  },
  "packageManager": "npm@10.9.3"
}
