{
  "packageManager": "pnpm@10.18.2+sha512.9fb969fa749b3ade6035e0f109f0b8a60b5d08a1a87fdf72e337da90dcc93336e2280ca4e44f2358a649b83c17959e9993e777c2080879f3801e6f0d999ad3dd",
  "scripts": {
    "dev": "vite",
    "dev:init": "./scripts/dev-init.sh",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "pnpm run typecheck && pnpm run lint:code",
    "lint:code": "eslint --max-warnings=0",
    "lint:code:watch": "chokidar \"**/*\" --initial -i \"**/{node_modules,data,.git}/**\" -d 150 -c \"echo ::ESLINT START::; pnpm exec eslint -f stylish --cache --cache-location data/.eslintcache . --max-warnings=0 || true; echo ::ESLINT END::\"",
    "lint:fix": "eslint --max-warnings=0 --fix",
    "typecheck": "tsc",
    "typecheck:watch": "pnpm run typecheck --watch",
    "check": "pnpm run lint && pnpm run test",
    "deps:list": "pnpm list --depth=-1 --silent",
    "test": "pnpm run test:unit",
    "test:unit": "pnpm exec vitest run",
    "test:unit:coverage": "pnpm exec vitest run --coverage",
    "test:unit:watch": "node ./scripts/test-unit-watch.mjs",
    "test:preview": "node ./scripts/test-preview.mjs"
  },
  "dependencies": {
    "@lexical/devtools-core": "^0.37.0",
    "@lexical/history": "^0.37.0",
    "@lexical/list": "^0.37.0",
    "@lexical/react": "^0.37.0",
    "@lexical/rich-text": "^0.37.0",
    "@lexical/utils": "^0.37.0",
    "@mantine/core": "^8.3.5",
    "@mantine/hooks": "^8.3.5",
    "dotenv-flow": "^4.1.0",
    "envalid": "^8.1.0",
    "lexical": "^0.37.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@eslint-react/eslint-plugin": "^1.53.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "chokidar-cli": "^3.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4",
    "vitest-preview": "^0.0.3"
  }
}
