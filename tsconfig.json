{
  "compilerOptions": {
    "target": "ES2022",
    "strict": true,
    "jsx": "react-jsx",
    "module": "ES2022",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["**/node_modules/**"],
  "include": [
    "./types",
    "./src",
    "./tests"
  ]
}
