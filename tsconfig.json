{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./data/cache/tsconfig.tsbuildinfo",
    "target": "ES2022",
    "jsx": "react-jsx",
    "lib": [
      "ES2023",
      "DOM"
    ],
    "moduleDetection": "force",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#config": [
        "./config/index.ts"
      ],
      "#tests": [
        "./tests/unit/_support/lib/index.ts"
      ],
      "#fixtures/*": [
        "./tests/fixtures/*"
      ],
      "#tests/*": [
        "./tests/unit/_support/lib/*"
      ],
      "#config/*": [
        "./config/*"
      ],
      "#lib/*": [
        "./lib/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client"
    ],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "**/node_modules/**",
    "./bookmarks/",
    "./dist/",
    "./data/"
  ]
}
