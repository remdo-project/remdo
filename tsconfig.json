{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./data/cache/tsconfig.tsbuildinfo",
    "target": "ES2022",
    "jsx": "preserve",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "moduleDetection": "force",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#tests": [
        "./tests/unit/_support/lib/index.ts"
      ],
      "#fixtures/*": [
        "./tests/fixtures/*"
      ],
      "#tests/*": [
        "./tests/unit/_support/lib/*"
      ],
      "#config/*": [
        "./config/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client",
      "vue"
    ],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "**/node_modules/**",
    "./bookmarks/",
    "./dist/",
    "./data/"
  ]
}
